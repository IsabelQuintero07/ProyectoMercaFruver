@model Login.ServiceReference.Purchase

@{
    ViewBag.Title = "Delete Purchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<h3>Are you sure you want to delete this Purchase?</h3>
<div>
    <h4>Delete Purchase</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Supplier
        </dt>

        <dd>
            @Html.DisplayFor(model => model.purchaseSupplierId)
        </dd>

        <dt>
            Product
        </dt>

        <dd>
            @Html.DisplayFor(model => model.purchaseProductId)
        </dd>

        <dt>
            Quantity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.purchaseQuantity)
        </dd>

        <dt>
            Unit Cost
        </dt>

        <dd>
            @Html.DisplayFor(model => model.purchaseUnitCost)
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.purchaseDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
