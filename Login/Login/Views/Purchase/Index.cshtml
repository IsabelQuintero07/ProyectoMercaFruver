    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Supplier)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UnitCost)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PurchaseDate)
    </td>
