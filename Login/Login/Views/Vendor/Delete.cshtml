    <h4>Delete Vendor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.vendorDocumentTypeId)
        </dd>
        <dt>
            Number
        </dt>
        <dd>
            @Html.DisplayFor(model => model.vendorDocumentTypeNumber)
        </dd>
        <dt>
           Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vendorName)
        </dd>
        <dt>
