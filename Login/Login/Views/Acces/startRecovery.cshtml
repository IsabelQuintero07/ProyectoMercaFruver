@model Login.Models.ViewModels.RecoveryViewModel

@{
    ViewBag.title = "startRecovery";
    Layout = "~/Views/Shared/_Login.cshtml";
}

    <div style="color:green;">
        @ViewBag.Message
    </div>


<div cuerpo>
    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6 col-md-offset-3">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="@Url.Content("~/Acces/startRecovery")" method="post">
                            <h3 class="text-center text-info">Recover Password</h3>
                            <div class="form-group">
                                <label for="email" class="text-info">Write your email</label><br>
                                @Html.TextBoxFor(d => d.Email, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(d => d.Email, null, new { style = "color:red" })
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Recovery">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>