@model Login.Models.ViewModels.RecoveryPasswordViewModel

@{
    ViewBag.title = "Recovery";
    Layout = "~/Views/Shared/_Login.cshtml";
}

    <div cuerpo>
        <div id="login">
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6 col-md-offset-3">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="@Url.Content("~/Acces/Recovery")" method="post">
                                <h3 class="text-center text-info">Recover Password</h3>
                                <div class="form-group">
                                    <label for="Password" class="text-info">Write your Password</label><br>
                                    @Html.PasswordFor(d => d.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(d => d.Password, null, new { style = "color:red" })
                                    @Html.HiddenFor(d => d.token)
                                </div>
                                <div class="form-group">
                                    <label for="ConfirmPassword" class="text-info">Repeat your Password</label><br>
                                    @Html.PasswordFor(d => d.Password2, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(d => d.Password2, null, new { style = "color:red" })
                                </div>
                                <div class="form-group">
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="Send">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
