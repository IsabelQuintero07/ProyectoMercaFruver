@model Login.ServiceReference.Product

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this Product?</h3>
<div>
    <h4>Delete Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productCategoryId)
        </dd>

        <dt>
            Code
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productCode)
        </dd>

        <dt>
            Cost
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productCost)
        </dd>

        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productName)
        </dd>

        <dt>
            SellingPrice
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productSellingPrice)
        </dd>

        <dt>
            Stock
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productStock)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
