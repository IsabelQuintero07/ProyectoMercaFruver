@model Login.ServiceReference.Supplier

@{
    ViewBag.Title = "Delete Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this Supplier?</h3>
<div>
    <h4>Delete Supplier</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.supplierName)
        </dd>

        <dt>
            Nit
        </dt>

        <dd>
            @Html.DisplayFor(model => model.supplierNit)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.supplierAddress)
        </dd>

        <dt>
            City
        </dt>

        <dd>
            @Html.DisplayFor(model => model.supplierCity)
        </dd>

        <dt>
            Phone Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.supplierPhoneNumber)
        </dd>

        <dt>
            Web Page
        </dt>

        <dd>
            @Html.DisplayFor(model => model.supplierWebpage)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
