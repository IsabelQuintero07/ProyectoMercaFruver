@model Login.ServiceReference.Client

@{
    ViewBag.Title = "Delete Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this Client?</h3>
<div>
    <h4>Delete Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.clientDocumentTypeId)
        </dd>

        <dt>
            Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.clientDocumentNumber)
        </dd>

        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.clientName)
        </dd>

        <dt>
           Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.clientAddress)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.clientEmail)
        </dd>

        <dt>
            Phone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.clientPhoneNumber)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
